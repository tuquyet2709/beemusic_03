<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tuquyet.musicapp.screen.album.ItemAlbumViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:onClick="@{viewModel::onItemClicked}"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_song_ava"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_2"
                bind:imageResource="@{viewModel.albumAvatarPath}"/>

                <TextView
                    android:id="@+id/text_song_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:text="@{viewModel.albumTitle}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dp_13"/>

                <TextView
                    android:id="@+id/text_song_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1"
                    android:textSize="@dimen/dp_11"
                    android:text="@{viewModel.albumArtist}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>