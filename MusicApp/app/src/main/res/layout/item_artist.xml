<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tuquyet.musicapp.screen.artist.ItemArtistViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:onClick="@{viewModel::onItemClicked}"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:text="@{viewModel.artistName}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dp_16"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1"
                    android:text="@{String.valueOf(viewModel.artistSongCount) == String.valueOf(@integer/one) ? String.valueOf(viewModel.artistSongCount) + @string/song :String.valueOf(viewModel.artistSongCount) + @string/songs}"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>