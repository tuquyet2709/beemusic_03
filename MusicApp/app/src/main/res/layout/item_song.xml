<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tuquyet.musicapp.screen.song.ItemSongViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_1"
            android:onClick="@{viewModel::onItemClicked}"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_song_ava"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_margin="@dimen/dp_2"
                bind:setImageDrawable="@{viewModel.songAvatar}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_song_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:text="@{viewModel.songTitle}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dp_16"/>

                <TextView
                    android:id="@+id/text_song_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1"
                    android:text="@{viewModel.songArtist}"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>